<% layout('./layout/boilerplate') %>
<div class="row mt-5">
    <div class="col-md-6 offset-3">
        <%- include('../partial/flashMessage') %>
        <h1 class="text-center">User Registration</h1>
        <form action="/users/register" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label" for="username">User name</label>
                <input class="form-control" type="text" id="username" name="user[username]" placeholder="username here" required>
                <div class="invalid-feedback">
                    Please input username :)
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="email">Email</label>
                <input class="form-control" type="text" id="email" name="user[email]" placeholder="email here" required>
                <div class="invalid-feedback">
                    Please input email :)
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" type="password" id="password" name="user[password]" placeholder="password here" required>
                <div class="invalid-feedback">
                    Please input password :)
                </div>
            </div>

            <div class="mb-3">
                <button class="btn btn-success" >REGISTER</button>
            </div>

            <a href="/main/">Back to main</a>
        </form>
    </div>
</div>

